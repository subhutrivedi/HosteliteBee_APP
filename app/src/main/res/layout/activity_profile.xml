<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/green"
    android:orientation="vertical"
    tools:context=".ProfileActivity">

    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:stretchColumns="*">

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imgbuttonA"
                android:layout_width="0dp"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="3dp"
                android:background="#d67601"
                android:baselineAligned="false"
                android:padding="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/hostel" />

            <ImageButton
                android:id="@+id/imgbuttonB"
                android:layout_width="0dp"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="3dp"
                android:adjustViewBounds="true"
                android:background="#d67601"
                android:baselineAligned="false"
                android:padding="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/messimg" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imgbuttonC"
                android:layout_width="0dp"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="3dp"
                android:adjustViewBounds="true"
                android:background="#d67601"
                android:padding="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/laundaryimg8" />

            <ImageButton
                android:id="@+id/imgbuttonD"
                android:layout_width="0dp"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="3dp"
                android:adjustViewBounds="true"
                android:background="#d67601"
                android:padding="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/stationaryimg" />

        </TableRow>

        <Button
            android:id="@+id/button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="#d67601"
            android:text="log out"
            tools:layout_editor_absoluteX="166dp"
            tools:layout_editor_absoluteY="258dp" />
    </TableLayout>

